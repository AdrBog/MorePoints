{
    "Site": {
        "DisplayName":{
            "default": "",
            "type": "text",
            "comment": "Display name of the site",
            "display": "Display Name"
        },
        "Description":{
            "default": "",
            "type": "textarea",
            "comment": "A brief description about this site",
            "display": "Description"
        },
        "Icon":{
            "default": "no_icon",
            "type": "text",
            "comment": "Icon for your site",
            "display": "Site icon",
            "options": [
                ["no_icon", "No Icon"],
                ["analytics", "Analytics"],
                ["chat", "Chat"],
                ["clock", "Clock"],
                ["computer", "Computer"],
                ["document", "Document"],
                ["filebox", "Filebox"],
                ["flag", "Flag"]
            ]
        },
        "Theme":{
            "default": "light",
            "type": "text",
            "comment": "Color theme for your site",
            "display": "Site theme",
            "options": [
                ["light", "Light"],
                ["dark", "Dark"],
                ["gruvbox", "Gruvbox"]
            ]
        },
        "Legacy":{
            "default": "",
            "type": "text",
            "comment": "Support for old browsers (Works in Pale Moon)",
            "display": "Legacy mode",
            "options": [
                ["disabled", "Disabled"],
                ["active", "Active"]
            ]
        }
    },
    "FTP": {
        "Host":{
            "default": "127.0.0.1",
            "type": "text",
            "comment": "Host where FTP server is stored (Leave empty for localhost)",
            "display": "Host"
        },
        "User":{
            "default": "",
            "type": "text",
            "comment": "User name of the FTP server",
            "display": "User"
        },
        "Password":{
            "default": "1234",
            "type": "password",
            "comment": "Site's password",
            "display": "Password (Need restart)"
        },
        "Root":{
            "default": "",
            "type": "text",
            "comment": "Path of server folder where files are stores",
            "display": "Root (Need restart)"
        }
    }
}
