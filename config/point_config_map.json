{
    "Point": {
        "DisplayName":{
            "default": "",
            "type": "text",
            "comment": "Display name of the point",
            "display": "Display Name"
        },
        "Description":{
            "default": "",
            "type": "textarea",
            "comment": "A brief description about this point",
            "display": "Description"
        },
        "Icon":{
            "default": "no_icon",
            "type": "text",
            "comment": "Icon for your point",
            "display": "Point icon",
            "options": [
                ["no_icon", "No Icon"],
                ["analytics", "Analytics"],
                ["chat", "Chat"],
                ["clock", "Clock"],
                ["computer", "Computer"],
                ["document", "Document"],
                ["filebox", "Filebox"],
                ["flag", "Flag"],
                ["folder", "Folder"],
                ["vultr", "Vultr"],
                ["linux", "Linux"]
            ]
        },
        "Theme":{
            "default": "light",
            "type": "text",
            "comment": "Color theme for your point",
            "display": "Color theme",
            "options": [
                ["light", "Light"],
                ["dark", "Dark"],
                ["gruvbox", "Gruvbox"]
            ]
        },
        "Legacy":{
            "default": "",
            "type": "text",
            "comment": "Support for old browsers (Works in Pale Moon)",
            "display": "Legacy mode",
            "options": [
                ["disabled", "Disabled"],
                ["active", "Active"]
            ]
        },
        "Password":{
            "default": "",
            "type": "password",
            "comment": "Password to enter the Point (Leave blank for no password)",
            "display": "Point Password"
        }
    },
    "Connection":{
        "Protocol":{
            "default": "disabled",
            "type": "text",
            "hideSections": "true",
            "comment": "What protocol use to make the connection",
            "display": "Protocol",
            "options": [
                ["FTP", "FTP"],
                ["SSH", "SSH"],
                ["WebDav", "WebDav"],
                ["Local", "None (local storage)"]
            ]
        }
    },
    "FTP": {
        "Host":{
            "default": "127.0.0.1",
            "type": "text",
            "comment": "Host where FTP server is stored",
            "display": "Host"
        },
        "Port":{
            "default": "21",
            "type": "number",
            "comment": "Port number where FTP server is stored",
            "display": "Port"
        },
        "User":{
            "default": "",
            "type": "text",
            "comment": "User name of the FTP server",
            "display": "User"
        },
        "Password":{
            "default": "",
            "type": "password",
            "comment": "User's password",
            "display": "Password"
        },
        "TLS":{
            "default": "disabled",
            "type": "text",
            "comment": "Use explicit FTP over TLS/SSL, may not work",
            "display": "FTP over TSL/SSL",
            "options": [
                ["disabled", "Disabled"],
                ["active", "Active"]
            ]
        }
    },
    "WebDav": {
        "Host":{
            "default": "127.0.0.1",
            "type": "text",
            "comment": "Host where WebDav server is located",
            "display": "Host"
        },
        "User":{
            "default": "",
            "type": "text",
            "comment": "User name of the WebDav server",
            "display": "User"
        },
        "Password":{
            "default": "",
            "type": "password",
            "comment": "User's password",
            "display": "Password"
        }
    },
    "SSH": {
        "Host":{
            "default": "127.0.0.1",
            "type": "text",
            "comment": "Host where SSH server is located",
            "display": "Host"
        },
        "Port":{
            "default": "22",
            "type": "number",
            "comment": "Port number where SSH server is stored",
            "display": "Port"
        },
        "User":{
            "default": "",
            "type": "text",
            "comment": "User name of the SSH server",
            "display": "User"
        },
        "Password":{
            "default": "",
            "type": "password",
            "comment": "User's password",
            "display": "Password"
        }
    },
    "Local": {
        "Path":{
            "default": "",
            "type": "text",
            "comment": "Local path",
            "display": "Path"
        }
    }
}
